#include <stdio.h>


int main ()
{
	float x,hasil,temp,cos;
	int f=0;
	int t= -1;
	int has = 1;
	hasil = 1;
	temp = 1 ;
	
	printf(" nilai x (radian) :");
	scanf("%f",&x);
	cos = x/1.14;
	for(int i=1;i<=4;i++,t=-t)
	{
		f=f+2;
        temp = temp*((x*x)/(f*(f-1)));
        hasil = hasil + (t*temp);
	}
	printf("cos x = %2.0f adalah hasilnya : %f",cos*180,hasil*-1);
	//1.57142857//
}
